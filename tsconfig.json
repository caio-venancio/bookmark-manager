{
    "compilerOptions": {
      "target": "ES6",                   // Especifica a versão JavaScript de saída
      "module": "ES6",                   // Define o sistema de módulos (ES Modules para navegadores)
      "rootDir": "src",                  // Pasta raiz onde estão os arquivos TypeScript
      "outDir": "dist",                  // Pasta onde os arquivos compilados serão gerados
      "strict": true,                    // Habilita verificações rigorosas
      "esModuleInterop": true,           // Permite compatibilidade com módulos CommonJS
      "skipLibCheck": true,              // Ignora checagem de tipos em arquivos de biblioteca
      "forceConsistentCasingInFileNames": true, // Garante uso consistente de maiúsculas/minúsculas
      "sourceMap": true                  // Gera arquivos .map para facilitar debug no navegador
    },
    "include": ["src/**/*.ts"],          // Inclui todos os arquivos TypeScript na pasta src
    "exclude": ["node_modules"]          // Exclui a pasta node_modules
  }